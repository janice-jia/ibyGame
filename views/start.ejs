        var se;
        var m=0;
        var s=0;
        var ss=1;
        function second(){
            if (ss%5==0)
            {
                s++;
            }
            if(s>0 && (s%60)==0){
                m+=1;s=0;
            }
            document.getElementById("times").innerHTML= tuDou(m)+":"+tuDou(s);
            document.timefrm.nowm.value = m;
            document.timefrm.nows.value = s;
            ss++;
        }

        function tuDou(timeNum){
            if(timeNum < 10){
                return '0'+timeNum;
            }else{
                return timeNum;
            }
        }

        function cleartime()
        {
            m=0;
            s=0;
            ss=1;
        }
        function NextStep()
        {
            document.timefrm.action="/game/luckydraw";
            document.timefrm.submit();
            window.localStorage.setItem('times','12')
        }
